#!/usr/bin/perl

use strict;
use warnings;

use PDF::API2;

my $pdf = PDF::API2->new();
my $page = $pdf->page();
my $gfx = $page->gfx();

my $barcode = $pdf->xo_ean13(
    -code => '0123456789012',
    -zone => 10,
    -umzn => 0,
    -lmzn => 10,
    -font => $pdf->corefont('Helvetica'),
    -fnsz => 10,
);

$gfx->formimage($barcode, 100, 100, 1);

$pdf->saveas('barcode.pdf');

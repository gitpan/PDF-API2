print " ----\n";

foreach $t (PDF::API2::xFont::listwinfonts()) {
	print "$t\n";

	$font=$pdf->ttfont($t,2);
	
	$page = $pdf->page;
	$page->mediabox(595,842);
	$txt=$page->text;
	## $txt->compress;
	$txt->translate(100,700);
	$txt->font($font,50);
	$txt->lead(50);
	$txt->text('Hello World !');
